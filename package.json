{
  "name": "msw-devtools-plugin",
  "private": true,
  "scripts": {
    "build": "pnpm --filter ./packages/core run build",
    "dev": "pnpm --filter ./packages/core run dev",
    "dev:demo": "pnpm --filter demo run dev",
    "typecheck": "pnpm build && tsgo -p packages/core --noEmit && tsgo -p apps/demo --noEmit",
    "clean": "pnpm -r run clean",
    "test": "vitest --project=unit",
    "test:ci": "vitest run --project=unit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test:e2e": "playwright test",
    "changeset": "changeset",
    "storybook": "pnpm --filter ./packages/core run storybook",
    "build-storybook": "pnpm --filter ./packages/core run build-storybook",
    "test-storybook": "vitest run --project=storybook"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript/native-preview": "7.0.0-dev.20260223.1",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "jsdom": "^28.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "ultracite": "^7.2.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.6.5",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msw"
    ]
  },
  "msw": {
    "workerDirectory": [
      "apps/demo/public"
    ]
  }
}
